{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Experimental: Attach",
      "type": "pythonExperimental",
      "request": "attach",
      "port": 3000,
      "host": "junhanpi",
      "logToFile": true,
      "redirectOutput": true,
      "pathMappings": [{
        "localRoot": "${workspaceFolder}\\modules\\PythonModule", // Local root  (where source and debugger running)
        "remoteRoot": "/app" // Remote root (where remote code is running)
      }]
    },
    {
      "name": "Attach Python Module (Remote Debug)",
      "type": "python",
      "request": "attach",
      "localRoot": "${workspaceFolder}/modules/PythonModule",
      "remoteRoot": "/app",
      "port": 3000,
      "secret": "my_secret",
      "host": "localhost"
    },
    {
      "name": "Python (Launch)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": true,
      "pythonPath": "${config:python.pythonPath}",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "env": {},
      "envFile": "${workspaceFolder}/.env",
      "debugOptions": [
        "RedirectOutput"
      ]
    }
  ]
}